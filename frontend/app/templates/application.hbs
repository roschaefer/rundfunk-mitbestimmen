<div class="ui top attached inverted segment">
  <div class="ui container">
    <div id="main-menu" class="ui stackable secondary inverted pointing menu">
      <div class="ui left small inverted menu">
        {{#link-to 'index' class='header item'}}
        <img class="ui bottom aligned mini image" src="/assets/images/logo.svg">
        Rundfunk<br>
        MITBESTIMMEN
        {{/link-to}}

        {{#link-to 'find-broadcasts' (query-params q=null) class='item' }}
        {{t 'application.menu.item.find-broadcasts'}}
        {{/link-to}}

        {{#if session.isAuthenticated}}
        {{#link-to 'invoice' class='ui item'}}
        {{t 'application.menu.item.invoice'}}
        {{/link-to}}
        {{/if}}

        {{#link-to 'statistics' class='ui item'}}
        {{t 'application.menu.item.statistics'}}
        {{/link-to}}

        {{#link-to 'visualize' class='ui item'}}
        {{t 'application.menu.item.visualization'}}
        {{/link-to}}
      </div>

      <div class="ui inverted small right menu">
        {{language-chooser}}

        <div class="item">
          {{#if session.isAuthenticated}}
          <a href='#' class="ui inverted tiny button" {{action 'logout'}}>
            {{t 'application.logout'}}
          </a>
          {{else}}
          <a href='#' class="ui inverted tiny button" {{action 'login'}}>
            {{t 'application.login'}}
          </a>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="ui main container">
  {{outlet}}
</div>

<div class="ui inverted footer segment">
  <div class="ui center aligned container">
    <div class="ui stackable inverted grid">
      <div class="row">
        <div class="sixteen wide column">
          <h2 class="ui inverted header">{{t 'application.footer.title'}}</h2>
        </div>
      </div>
      <div class="doubling row">
        <div class="computer and tablet only four wide column">
        </div>
        <div class="eight wide column">
          <div class="ui big inverted horizontal link list">
            <a class="item" href="mailto:feedback@rundfunk-mitbestimmen.de">
              <i class="mail outline icon"></i>
              Email
            </a>
            <a class="item" target="_blank" href="https://github.com/roschaefer/rundfunk-mitbestimmen">
              <i class="github icon"></i>
              GitHub
            </a>
            <a class="item" target="_blank" href="https://www.facebook.com/rundfunkmitbestimmen/">
              <i class="facebook icon"></i>
              Facebook
            </a>
            <a class="item" target="_blank" href="https://twitter.com/RundfunkMB">
              <i class="twitter icon"></i>
              Twitter
            </a>
            {{#link-to 'about-us' class='item'}}
              <i class="smile icon"></i>
              {{t 'application.footer.about-us'}}
            {{/link-to}}
          </div>
        </div>
        <div class="four wide column">
          <a width="150" height="50" href="https://auth0.com/?utm_source=oss&utm_medium=gp&utm_campaign=oss" target="_blank" alt="Single Sign On & Token Based Authentication - Auth0"><img width="150" height="50" alt="JWT Auth for open source projects" src="//cdn.auth0.com/oss/badges/a0-badge-dark.png"/></a>
        </div>
      </div>
      <div class="ui inverted section divider"></div>
      <div class="centered row">
        <div class="eight wide center aligned column">
          <div class="ui horizontal inverted small divided link list">
            <a class="item" href="mailto:feedback@rundfunk-mitbestimmen.de">
              {{t 'application.footer.contact-us'}}
            </a>
            {{#link-to 'data-privacy' class='item'}}
              {{t 'application.footer.data-privacy'}}
            {{/link-to}}
            {{#link-to 'imprint' class='item'}}
              {{t 'application.footer.imprint'}}
            {{/link-to}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
