{{#if broadcasts}}
  <div class="centered row">
    <div class="sixteen wide mobile twelve wide tablet eight wide computer center aligned column">
      <div class="ui horizontal list">
        {{#each broadcasts as |broadcast index|}}
          {{decision-progress-icon broadcast=broadcast current=(eq step index)}}
        {{/each}}
      </div>
      <div class="ui left pointing label">
        {{step}}/{{broadcasts.length}}
      </div>
    </div>
  </div>
{{/if}}

{{#if currentBroadcast}}
  <div class="row">
    <div class="four wide computer column">
      {{help-message header='decide.help-messages.task.header' content='decide.help-messages.task.content' }}
    </div>

    <div class="sixteen wide mobile twelve wide tablet eight wide computer column">
      <div class="row">
        <div class="column">
        </div>
        <div class="column">
          {{decision-card broadcast=currentBroadcast
          step=step
          decide=(action 'decide')
          next=(action 'next')
          back=(action 'back')}}
        </div>
      </div>
    </div>

    <div class="four wide computer only column">
    </div>

  </div>
{{else}}

  {{#if broadcasts}}
    <div class="centered row">
      <div class="sixteen wide mobile twelve wide tablet eight wide computer column">
        <div class="ui decision-card reload-or-invoice raised centered fluid card">
          <div class="content">
            {{#if (gt positiveReviews 1)}}
              <div class="header">
                {{t 'decide.guide.to-invoice.header' positives=positiveReviews }}
              </div>
              <div class="description">
                {{format-html-message 'decide.guide.to-invoice.content' positives=positiveReviews }}
              </div>
            {{else}}
              <div class="header">
                {{t 'decide.guide.load-more.header' positives=positiveReviews }}
              </div>
              <div class="description">
                {{format-html-message 'decide.guide.load-more.content' positives=positiveReviews }}
              </div>
            {{/if}}
          </div>
          <div class="content">
            <div class="ui grid">
              <div class="two column row">
                <div class="column">
                </div>
                <div class="column">
                  <button class='ui fluid labeled {{primaryReloadButton}} icon button' {{action 'loadMore'}}>
                    <i class="repeat icon"></i>
                    {{t 'decide.button.load-more' }}
                  </button>
                </div>
              </div>
              <div class="two column row">
                <div class="column">
                  <button class="ui fluid icon back button" {{action 'back'}}>
                    <i class="backward icon"></i>
                    {{ t 'decide.decision-card.actions.back' }}
                  </button>
                </div>
                <div class="column">
                  {{#link-to 'invoice' classNames=(concat 'ui fluid labeled icon button link-to-invoice ' primaryInvoiceButton)}}
                    <i class="euro icon"></i>
                    {{t 'decide.button.to-invoice' }}
                  {{/link-to}}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/if}}

{{/if}}
