<div class="four wide field">
  <div class="ui right floated buttons">
    <button id="alphabetical_order_ascending" class="ui {{if (eq sort 'asc') 'active'}} icon button" {{action 'submitSort' 'asc'}}>
      <i class="sort alphabet ascending icon"></i>
    </button>
    <button id="random_order" class="ui {{if (eq sort 'random') 'active'}} icon button" {{action 'submitSort' 'random'}}>
      <i class="random icon"></i>
    </button>
    <button id="alphabetical_order_descending" class="ui {{if (eq sort 'desc') 'active'}} icon button" {{action 'submitSort' 'desc'}}>
      <i class="sort alphabet descending icon"></i>
    </button>
  </div>
</div>
{{yield}}
