<div class="row">
  <div class="column">
    <h1 class="ui huge header">
      {{t 'visualize.diff.header'}}
      <div class="sub header">
        {{t 'visualize.diff.sub-header' diffedModel=nominative}}
      </div>
    </h1>
  </div>
</div>


<div class="row">
  <div class="column">
    <div class="ui basic padded segment"></div>
  </div>
</div>

<div class="row">
  <div class="column">
      <div class="ui tiny header">
        {{t 'visualize.diff.explanations.header'}}
      </div>
      {{#ui-accordion class='fluid styled'}}
        <div class="title accordion-header">
          <i class="dropdown icon"></i>
          {{t 'visualize.diff.explanations.actual-amount.header'}}
        </div>
        <div class="content accordion-text">
          <p>
          {{t 'visualize.diff.explanations.actual-amount.content' diffedModel=genetive}}
          </p>
        </div>
        <div class="title accordion-header">
          <i class="dropdown icon"></i>
          {{t 'visualize.diff.explanations.expected-amount.header'}}
        </div>
        <div class="content accordion-text">
          <p>
          {{t 'visualize.diff.explanations.expected-amount.content' diffedModel=genetive}}
          <br>
          <div class="ui basic compact segment">
            <strong>
            <span>expected(broadcast) = impressions(broadcast) * average</span>
            <br>
            <span>average = total_amount / total_impressions </span>
            </strong>
          </div>
          </p>
        </div>
        <div class="title accordion-header">
          <i class="dropdown icon"></i>
          {{t 'visualize.diff.explanations.number-of-broadcasts.header'}}
        </div>
        <div class="content accordion-text">
          <p>
          {{t 'visualize.diff.explanations.number-of-broadcasts.content' diffedModel=genetive}}
          </p>
        </div>
      {{/ui-accordion}}
      {{yield}}
  </div>
</div>
